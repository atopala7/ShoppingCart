@model IEnumerable<AndreiTopala_ShoppingCart.ViewModels.CartItemViewModel>

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Shopping Cart</h2>

<p>
    @Html.ActionLink("Return to Item List", "Index", "Item")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Remove", "RemoveItem", new { id=item.Id })
        </td>
    </tr>
}
    <tr>
        <td><b>Total Items</b></td>
        <td><b>@ViewBag.totalPrice</b></td>
        <td><b>@ViewBag.totalQuantity</b></td>
        <td></td>
    </tr>

</table>
